@model ProjectBuricLuka.Model.VideoGame

<div class="form-group">
	<label class="control-label">Name</label>
	<input asp-for="Name" class="form-control" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Rating</label>
	<input asp-for="Rating" class="form-control" />
	<span asp-validation-for="Rating" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Website" class="control-label"></label>
	<input asp-for="Website" class="form-control" />
	<span asp-validation-for="Website" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Genre</label>
	<input asp-for="Genre" class="form-control" />
	<span asp-validation-for="Genre" class="text-danger"></span>
</div>

@{
	
	var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
	pattern = pattern.Replace("DD", "D").Replace("D", "DD");
	pattern = pattern.Replace("MM", "M").Replace("M", "MM");
}

<div class="form-group">
	<label class="control-label">Release date</label>

	<div class="input-group date inp-datepicker" data-format="@pattern">
		<input type="text" class="form-control" asp-for="ReleaseDate" />
		<span class="input-group-append">
			<span class="input-group-text bg-light d-block">
			<i class="fa fa-calendar"></i>
			</span>
		</span>
    </div>
	<span asp-validation-for="ReleaseDate" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Developers</label>
	<select asp-for="DeveloperID" asp-items="ViewBag.PossibleDevelopers" class="form-control"></select>
	<span asp-validation-for="DeveloperID" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Developers</label>
	<select asp-for="PublisherID" asp-items="ViewBag.PossiblePublishers" class="form-control"></select>
	<span asp-validation-for="PublisherID" class="text-danger"></span>
</div>
<div class="form-group">
	<input type="submit" value="Spremi" class="btn btn-outline-success" />
</div>