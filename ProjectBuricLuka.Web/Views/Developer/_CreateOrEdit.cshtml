@model ProjectBuricLuka.Model.Developer

<div class="form-group">
	<label class="control-label">Name</label>
	<input asp-for="Name" class="form-control" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Website" class="control-label"></label>
	<input asp-for="Website" class="form-control" />
	<span asp-validation-for="Website" class="text-danger"></span>
</div>

@{
	
	var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
	pattern = pattern.Replace("DD", "D").Replace("D", "DD");
	pattern = pattern.Replace("MM", "M").Replace("M", "MM");
}
<div class="form-group">
	<label asp-for="YearFounded" class="control-label"></label>
	<input asp-for="YearFounded" class="form-control" />
	<span asp-validation-for="YearFounded" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Headquarter city</label>
	<select asp-for="CityProjectID" asp-items="ViewBag.PossibleCities" class="form-control"></select>
	<span asp-validation-for="CityProjectID" class="text-danger"></span>
</div>
<div class="form-group">
	<input type="submit" value="Spremi" class="btn btn-outline-success" />
</div>